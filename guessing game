#chooses number between 1 and 100, guess number

import random

print('I've chosen a random number from 1 to 100, try to guess')

number = random.randint(1,100)

i = 0

while True:
  i += 1
  guess = input()
  if guess < number:
    print('Too Low')
    continue
  elif guess > number:
    print('Too High')
    continue
  else:
    print('Good, it took you' + str(i) + 'guesses')
    sys.exit()  
   		
    
    
